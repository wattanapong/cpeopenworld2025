<!DOCTYPE html>
<html>
<head>
  <title>CPE Blocks</title>
  <meta http-equiv="refresh" content="5"> <!-- auto refresh every 5 sec -->
  <style>
    .grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      margin: 40px;
    }
    .block {
      border: 2px solid #333;
      border-radius: 10px;
      padding: 30px;
      text-align: center;
      font-size: 24px;
      font-weight: bold;
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h1 style="text-align:center;">CPE Blocks</h1>
  <div class="grid">
    <% for (let i = 1; i <= 8; i++) { %>
      <% if (ids && ids.includes("CPE#" + i)) { %>
        <div class="block">CPE#<%= i %></div>
      <% } %>
    <% } %>
  </div>
</body>
</html>
